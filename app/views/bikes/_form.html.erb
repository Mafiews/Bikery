<%= simple_form_for(@bike) do |f| %>
  <%= f.input :model%>
  <%= f.input :bike_type, collection: ["electric", "flying", "monocycle", "tandem", "folding", "race", "city", "cargo"] %>
  <%= f.input :condition, collection: ["fair", "good", "new"] %>
  <%= f.input :price, label:"Unit price per day", input_html: { min:'0'} %>
  <%= f.input :description%>
  <%= f.submit %>
<% end %>
