<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="card text-center">
        <div class="card-header">
          <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
              <%= link_to 'Edit rental', edit_rental_path(@rental), class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Delete rental', rental_path(@rental), method: :delete, data: { confirm: "Are you sure?" }, class:"nav-link" %>
            </li>
          </ul>
        </div>
        <div class="row">
          <div class="col-6">
            <%= cl_image_tag @rental.bike.photo.key, height: 200, class: "card-img rounded" %>
          </div>
         <div class="col-6">
          <div class="card-body">
            <h5 class="card-title">Thank you for your booking ! The bike owner will confirm soon... </h5>
            <h4 class="card-text"><%= @rental.bike.model %></h4>
            <p class="card-text">Start from <%= @rental.start_date %> to  <%= @rental.end_date %></p>
            <p class="card-text">Unit price: <%= @rental.bike.price %></p>
            <p class="card-text">Total price: <%= @rental.rental_price %> â‚¬</p>
          </div>
         </div>
        </div>
      </div>
      <%= link_to "Back to your Dashboard", dashboard_path, class:"btn btn-outline-dark mt-5" %>
    </div>
  </div>
</div>





