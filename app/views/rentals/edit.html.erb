<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="card mt-4">
        <div class="bike-info d-felx">
          <div class="row align-items-center justify-content-around">
            <%= cl_image_tag @rental.bike.photo.key, :width=>300, :fetch_format=>:auto, :crop=>"scale", class: "rounded" %>
            <div class="bike-text border-left p-5">
              <h5><i class="fas fa-bicycle"></i> <%= @rental.bike.bike_type %></h5>
              <h5><i class="fas fa-battery-full"></i> <%= @rental.bike.condition %></h5>
              <h5><i class="fas fa-euro-sign"></i> <%= @rental.bike.price %> / day</h5>
            </div>
          </div>
        </div>
        <div class="card-body">
          <h5 class="card-title text-center">Change rental days</h5>
          <div class="rental-days">
            <%= simple_form_for (@rental) do |f| %>
              <%= f.input :start_date, as: :string,  required: false, input_html: {class: "datepicker"} %>
              <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
              <%= f.submit "Update", class: "btn btn-success text-white" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



