<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-8">
      <h2>Your history of rentals</h2>
      <% @rentals.each do |rental| %>
      <div class="card text-center mt-3">
        <div class="card-header">
          <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
              <%= link_to "Rental details", rental_path(rental), class:"nav-link" %>
            </li>
          </ul>
        </div>

        <div class="row">
          <div class="col-5">
            <%= cl_image_tag rental.bike.photo.key, height: 200, class: "card-img rounded" %>
          </div>
          <div class="col-6">
            <div class="card-body">
              <h4 class="card-title"><%= rental.bike.model %></h4>
              <p class="card-text">Start from <%= rental.start_date %> to  <%= rental.end_date %></p>
              <p class="card-text">Total price: <%= rental.rental_price %> â‚¬</p>
            </div>
          </div>
        </div>
      </div>
        <% end %>
    </div>
  </div>
</div>





